<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="edu.rosehulman.todoheap.account.view.AccountViewModel" />
        <variable
            name="settings"
            type="edu.rosehulman.todoheap.account.model.SettingsModel" />
        <variable
            name = "controller"
            type = "edu.rosehulman.todoheap.account.controller.AccountController" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".account.AccountFragment"
        android:background="@color/grey_background">
        <LinearLayout
            android:id="@+id/account_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@{model.profilePicture}"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/text_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="@{model.name}"
                />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/sign_out"
                    android:layout_marginTop="40dp"
                    android:onClick="@{() -> controller.onLogOut()}"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Section Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Settings"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="22sp"
                    />
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <CheckBox
                        android:id="@+id/checkbox_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={settings.showNotifications}"
                        />
                    <TextView
                        android:id="@+id/checkbox_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@id/checkbox_notifications"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable push notifications"
                        android:textColor="@color/grey_text"
                        android:layout_below="@id/checkbox_text"
                        android:layout_alignLeft="@id/checkbox_text"
                        android:textSize="18sp"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How often should we give you a summary?"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:id="@+id/free_notification_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:focusableInTouchMode="true"
                    android:selectedItemPosition="@{settings.freeNotificationTime}"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule Notifications?"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:id="@+id/scheduled_notification_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:focusableInTouchMode="true"
                    android:selectedItemPosition="@{settings.scheduledNotificationTime}"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort Weight Settings"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="22sp"
                    />

                <!-- Sorting Settings Below Here -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Time"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <com.google.android.material.slider.Slider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="-1"
                    android:valueTo="1"
                    android:value="@{settings.dueTimeWeight}"
                    app:labelBehavior="floating"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <com.google.android.material.slider.Slider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="-1"
                    android:valueTo="1"
                    android:value="@{settings.priorityWeight}"
                    app:labelBehavior="floating"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procrastination"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <com.google.android.material.slider.Slider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="-1"
                    android:valueTo="1"
                    android:value="@{settings.procrastinationWeight}"
                    app:labelBehavior="floating"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enjoyability"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <com.google.android.material.slider.Slider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="-1"
                    android:valueTo="1"
                    android:value="@{settings.enjoyabilityWeight}"
                    app:labelBehavior="floating"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workload"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <com.google.android.material.slider.Slider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="-1"
                    android:valueTo="1"
                    android:value="@{settings.workloadWeight}"
                    app:labelBehavior="floating"
                    />

            </LinearLayout>
        </ScrollView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>