<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name = "controller"
            type="edu.rosehulman.todoheap.main.Controller"
            />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_add_scheduled_event"
            android:textSize="16sp"
            android:onClick="@{() -> controller.onClickScheduled()}"
            android:padding="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_add_free_event"
            android:textSize="16sp"
            android:onClick="@{() -> controller.onClickFree()}"
            android:padding="15dp"
            />

    </LinearLayout>
</layout>