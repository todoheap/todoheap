<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="edu.rosehulman.todoheap.tasks.view.TaskCardViewModel" />
        <variable
            name="controller"
            type="edu.rosehulman.todoheap.tasks.controller.TaskCardController" />
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="@{() -> controller.onClick()}"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.taskName}"
                android:padding="3dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.subText}"
                android:padding="3dp"
                android:layout_below="@id/task_title"
                android:textColor="@color/grey_text"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>

