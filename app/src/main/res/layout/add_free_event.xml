<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="edu.rosehulman.todoheap.activities.AddFreeActivity"
            />
        <variable
            name="controller"
            type="edu.rosehulman.todoheap.controller.ControllerBase" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddFreeActivity"

        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.TodoHeap.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.TodoHeap.PopupOverlay"

                />
<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:orientation="horizontal">-->


<!--                    <Button-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:text="@string/save"-->
<!--                        android:backgroundTint="@color/primary"-->
<!--                        android:layout_weight="0.35"-->
<!--                        android:onClick="@{() -> activity.save()}"-->
<!--                        />-->
<!--                </LinearLayout>-->


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:clickable="true"
            android:focusableInTouchMode="true"
            >


            <EditText
                android:id="@+id/editTextEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/event_name"
                android:onFocusChange="@{(v,f)->controller.hideKeyboardOnLoseFocus(v,f)}"
                />

            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/location"
                android:onFocusChange="@{(v,f)->controller.hideKeyboardOnLoseFocus(v,f)}"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deadline"
                android:clickable="true"
                android:focusableInTouchMode="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusableInTouchMode="true"
                >
                <DatePicker
                    android:id="@+id/date_picker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:startYear="2021"
                    android:scaleY=".75"
                    android:scaleX=".75"
                    />
                <TimePicker
                    android:id="@+id/time_picker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:timePickerMode="spinner"
                    android:scaleY=".75"
                    android:scaleX=".75"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/deadline_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deadline_disc"
                android:onClick="@{(v)->controller.hideKeyboard(v)}"
                />

            <EditText
                android:id="@+id/workload_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/work_load_in_hours"
                android:inputType="number"
                android:onFocusChange="@{(v,f)->controller.hideKeyboardOnLoseFocus(v,f)}"
                />

            <RadioGroup
                android:id="@+id/is_one_sitting_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <RadioButton
                    android:id="@+id/is_one_sitting_false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_work_can_be_done_in_multiple_sessions"
                    android:focusableInTouchMode="true"
                    />
                <RadioButton
                    android:id="@+id/is_one_sitting_true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_work_must_be_done_in_one_sitting"
                    android:focusableInTouchMode="true"
                    />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/procrastination_desc"
                android:textSize="16sp"
                android:clickable="true"
                android:focusableInTouchMode="true"
                />

            <Spinner
                android:id="@+id/procrastination_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:focusableInTouchMode="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enjoyable_desc"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:textSize="16sp"
                />
            <Spinner
                android:id="@+id/enjoyable_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:focusableInTouchMode="true"
                />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>