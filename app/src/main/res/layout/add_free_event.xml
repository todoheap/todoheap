<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="controller"
            type="edu.rosehulman.todoheap.controller.ControllerBase" />
        <variable
            name="model"
            type="edu.rosehulman.todoheap.viewmodel.FreeEventInputViewModel"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddFreeActivity"

        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.TodoHeap.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.TodoHeap.PopupOverlay"
                />


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:clickable="true"
            android:focusableInTouchMode="true"
            >


            <EditText
                android:id="@+id/editTextEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_name"
                android:text="@={model.eventName}"
                android:onFocusChange="@{(v,f)->controller.hideKeyboardOnLoseFocus(v,f)}"
                />

            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="@={model.location}"
                android:hint="@string/location"
                android:onFocusChange="@{(v,f)->controller.hideKeyboardOnLoseFocus(v,f)}"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deadline"
                android:clickable="true"
                android:focusableInTouchMode="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusableInTouchMode="true"
                >
                <!-- TODO: change to a dialog to pick deadline -->
                <DatePicker
                    android:id="@+id/date_picker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:scaleY="1"
                    android:scaleX="1"
                    />
                    <!--android:year="@={model.deadline.year}"
                    android:month="@={model.deadline.month}"
                    android:day="@={model.deadline.day}"-->
                <TimePicker
                    android:id="@+id/time_picker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:timePickerMode="spinner"
                    android:scaleY="1"
                    android:scaleX="0.75"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/deadline_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deadline_disc"
                android:onClick="@{(v)->controller.hideKeyboard(v)}"
                />

            <EditText
                android:id="@+id/workload_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/work_load_in_hours"
                android:inputType="numberDecimal"
                android:onFocusChange="@{(v,f)->controller.hideKeyboardOnLoseFocus(v,f)}"
                />

            <RadioGroup
                android:id="@+id/is_one_sitting_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <RadioButton
                    android:id="@+id/is_one_sitting_false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_work_can_be_done_in_multiple_sessions"
                    android:onClick="@{(v)->controller.hideKeyboard(v)}"
                    />
                <RadioButton
                    android:id="@+id/is_one_sitting_true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_work_must_be_done_in_one_sitting"
                    android:onClick="@{(v)->controller.hideKeyboard(v)}"
                    />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/procrastination_desc"
                android:textSize="16sp"
                android:clickable="true"
                android:focusableInTouchMode="true"
                />

            <Spinner
                android:id="@+id/procrastination_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:focusableInTouchMode="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enjoyable_desc"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:textSize="16sp"
                />
            <Spinner
                android:id="@+id/enjoyable_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:focusableInTouchMode="true"
                />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>