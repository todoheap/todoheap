<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="edu.rosehulman.todoheap.calendar.view.CalendarCardViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/calendar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/format_time(model.hourIn12, model.minute)}"
            android:textSize="24sp"
            android:paddingLeft="10dp"
            android:visibility="@{model.showTime?View.VISIBLE:View.INVISIBLE}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendar_date"
            android:text="@{model.pm? @string/pm : @string/am}"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:visibility="@{model.showTime?View.VISIBLE:View.INVISIBLE}"/>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_margin="4dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.title}"
                        android:padding="3dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.subText}"
                        android:padding="3dp"
                        android:layout_below="@id/task_title"
                        android:textColor="@color/grey_text"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</layout>
